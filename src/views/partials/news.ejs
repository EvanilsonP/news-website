<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap" rel="stylesheet">
    <title>Node Js News</title>
</head>
<body>
    <h1>Node JS News</h1>

    <header class="header">
        <div class="header__logo">Node JS News</div>
        <div class="header__search">Search</div>
    </header>

    <div class="wrapper">
        <div class="news">
            <% if(articles != null) {%> <!--// In case we mispell the API link, we still want to render the page with an error message-->
            <% articles.forEach(function(article, index) { %>
                <a href="#" class="news__card">
                   <img src="<%- article.thumbnail_url %>" alt="<%- article.title.rendered %> ">
                   <h2> <%- article.title.rendered %> </h2>
                   <p>  <%- article.excerpt.rendered %></p>
                </a>
            <% }) %>
            <% } else { %>
                <h2>No post was found.</h2>
            <% } %>
        </div>
    </div>

</body>
</html>